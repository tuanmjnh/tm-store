  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "swc src -d dist --source-maps --copy-files",
    "build:tsc": "tsc && tsc-alias",
    "mongo:start": "net start MongoDB",
    "mongo:stop": "net stop MongoDB",
    "mongo:remove": "\"C:\\MongoDB\\mongod.exe\" â€” remove",
    "mongo:rs": "sudo service mongod stop && sudo mongod --port 27017 --dbpath /media/tuanmjnh/data/database/MongoDB/Server/7.0/data --replSet rs0",
    "mongo:window-stop": "net stop MongoDB",
    "mongo:window-rs": "mongod --port 27017 --dbpath D:/database/MongoDB/Server/7.0/data --replSet rs0",
    "test": "jest --forceExit --detectOpenHandles",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "deploy:prod": "npm run build && pm2 start ecosystem.config.js --only prod",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev",
    "docker:delete-images": "docker image prune -a",
    "docker:images": "docker images",
    "docker:run": "docker run -d -p 8080:8100 gcr.io/tm-store-4576e/tm-store-api:1.0.0",
    "docker:running": "docker ps",
    "docker:remove": "docker rm -f 1809af6a68b9",
    "docker:build": "docker build --tag tm-store-api:1.0.0 .",
    "docker:build-image": "docker tag tm-store-api:1.0.0 gcr.io/tm-store-4576e/tm-store-api",
    "docker:content": "docker run -it gcr.io/tm-store-4576e/tm-store-api:1.0.0 sh",
    "docker:build-gcr": "docker build --tag gcr.io/tm-store-4576e/tm-store-api:1.0.0 .",
    "docker:gcloud-image": "docker push gcr.io/tm-store-4576e/tm-store-api:1.0.0"
  },
